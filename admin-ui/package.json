{
  "name": "mcp-bridge-admin-ui",
  "private": true,
  "version": "1.5.0",
  "description": "Web-based admin interface for MCP Bridge Server - built with React, TypeScript, and TailwindCSS",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "vite preview",
    "start:daemon": "node ./daemon.cjs start",
    "stop:daemon": "node ./daemon.cjs stop",
    "restart:daemon": "node ./daemon.cjs restart",
    "status:daemon": "[ -f /var/run/mcp-bridge-admin-ui.pid ] && echo Running PID $(cat /var/run/mcp-bridge-admin-ui.pid) || echo Not running",
    "log": "node ./daemon.cjs log"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.4",
    "@hookform/resolvers": "^5.1.1",
    "@tanstack/react-query": "^5.80.7",
    "axios": "^1.10.0",
    "lucide-react": "^0.515.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.58.0",
    "react-router-dom": "^7.6.2",
    "zod": "^3.25.64",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/node": "^24.0.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "postcss": "^8.5.5",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  }
}
