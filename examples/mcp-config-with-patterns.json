{
  "servers": [
    {
      "name": "filesystem",
      "transport": "stdio",
      "command": "npm",
      "args": ["exec", "-y", "@modelcontextprotocol/server-filesystem", "/tmp"],
      "enabled": true,
      "timeout": 30000,
      "restartOnFailure": true,
      "maxRestarts": 3
    },
    {
      "name": "brave-search",
      "transport": "stdio",
      "command": "npm",
      "args": ["exec", "-y", "@modelcontextprotocol/server-brave-search"],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      },
      "enabled": false,
      "timeout": 30000,
      "restartOnFailure": true,
      "maxRestarts": 3
    },
    {
      "name": "github",
      "transport": "stdio",
      "command": "npm",
      "args": ["exec", "-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      },
      "enabled": false,
      "timeout": 30000,
      "restartOnFailure": true,
      "maxRestarts": 3
    }
  ],
  "toolDiscoveryRules": [
    {
      "serverPattern": "filesystem",
      "toolPattern": "*",
      "exclude": false
    },
    {
      "serverPattern": "*",
      "toolPattern": "read_*",
      "exclude": false
    },
    {
      "serverPattern": "*",
      "toolPattern": "internal_*",
      "exclude": true
    }
  ],
  "toolAliases": [
    {
      "serverId": "brave-search",
      "toolName": "search",
      "newName": "brave_search"
    }
  ],
  "global": {
    "logLevel": "info",
    "maxConcurrentConnections": 10,
    "requestTimeout": 30000
  }
}
